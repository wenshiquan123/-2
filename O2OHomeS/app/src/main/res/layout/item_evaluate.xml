<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <com.hlzx.ljdjsj.view.CircleImageView
                android:id="@+id/buyer_iv"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/tu"
                tools:border_color="@color/divide_line_color"
                tools:border_width="2dp" />

            <RelativeLayout
                android:id="@+id/user_ll"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/buyer_iv"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/buyer_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="暂无昵称"
                    android:textColor="@color/font_black"
                    android:textSize="@dimen/text_12" />
                <TextView
                    android:id="@+id/evaluate_date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:text="2016-01-26"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/font_black"
                    android:textSize="@dimen/text_12" />
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评价时间"
                android:textColor="@color/font_black"
                android:textSize="@dimen/text_14" />

            <TextView
                android:id="@+id/date_tv"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-01-27 20:58"
                android:textColor="@color/font_black"
                android:textSize="@dimen/text_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="配送速度"
                android:textColor="@color/font_black"
                android:textSize="@dimen/text_12" />

            <com.hlzx.ljdjsj.view.ScoreView
                android:id="@+id/speed_sv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                tools:numStar="5"
                tools:rating="3"></com.hlzx.ljdjsj.view.ScoreView>

            <TextView
                android:id="@+id/rating_des_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="很好"
                android:textColor="@color/font_black"
                android:textSize="@dimen/text_14"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务态度"
                android:textColor="@color/font_black"
                android:textSize="@dimen/text_12" />

            <com.hlzx.ljdjsj.view.ScoreView
                android:id="@+id/attitude_sv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                tools:numStar="5"
                tools:rating="3"></com.hlzx.ljdjsj.view.ScoreView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="很好"
                android:textColor="@color/font_black"
                android:textSize="@dimen/text_14"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务质量"
                android:textColor="@color/font_black"
                android:textSize="@dimen/text_12" />

            <com.hlzx.ljdjsj.view.ScoreView
                android:id="@+id/quality_sv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                tools:numStar="5"
                tools:rating="3"></com.hlzx.ljdjsj.view.ScoreView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="很好"
                android:textColor="@color/font_black"
                android:textSize="@dimen/text_14"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/content_ll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="0dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="0dp"
                android:text="评价内容"
                android:textColor="@color/font_black"
                android:textSize="@dimen/text_12" />

            <TextView
                android:id="@+id/content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="131654"
                android:textColor="@color/font_black"
                android:textSize="@dimen/text_12" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>