<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/goods_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@mipmap/tu" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/arrow_right"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/goods_iv"
            android:layout_alignTop="@+id/goods_iv"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/te"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/goods_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="超市】越南草虾仁(黑虎虾)"
                    android:textColor="@color/font_black"
                    android:textSize="@dimen/text_14"
                    android:layout_marginLeft="0dp"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(中)200g/包海虾 海鲜"
                android:textColor="@color/font_black"
                android:textSize="@dimen/text_14"
                android:layout_marginLeft="0dp"
                android:visibility="gone"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/goods_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥51.4"
                    android:textColor="@color/font_orange"
                    android:textSize="@dimen/text_14"
                    android:visibility="visible"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="进价"
                    android:textColor="@color/font_black"
                    android:textSize="@dimen/text_14"
                    android:layout_marginLeft="10dp"
                    android:visibility="visible"
                    />
                <TextView
                    android:id="@+id/goods_initial_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥47.5"
                    android:textColor="@color/font_yellow"
                    android:textSize="@dimen/text_14"
                    android:layout_marginLeft="5dp"
                    android:visibility="visible"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="0dp"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/goods_format_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="规格:200g*12"
                    android:textColor="@color/font_dark_grey"
                    android:textSize="@dimen/text_12"
                    />
                <TextView
                    android:id="@+id/goods_inventory_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="库存:12"
                    android:textColor="@color/font_dark_grey"
                    android:textSize="@dimen/text_12"
                    android:layout_marginLeft="15dp"
                    android:visibility="visible"
                    />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>