<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_bg"
    android:orientation="vertical">

    <include layout="@layout/title_with_back_bar" />

    <com.hlzx.ljdjsj.view.OverScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            >
            <EditText
                android:id="@+id/feedback_et"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:hint="最多输入30个字"
                android:lines="5"
                android:padding="5dp"
                android:textColor="@color/font_light_black"
                android:textSize="@dimen/text_16" />

            <Button
                android:id="@+id/commit_bt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/selector_yellow_btn"
                android:padding="10dp"
                android:text="提交"
                android:onClick="commit"
                android:textColor="@color/font_black"
                android:textSize="@dimen/text_16" />

        </LinearLayout>
    </com.hlzx.ljdjsj.view.OverScrollView>

</LinearLayout>