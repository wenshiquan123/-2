<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hyman="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <com.hlzx.wenutil.ui.TwoWayProgressView
        android:id="@+id/my"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <com.hlzx.wenutil.ui.HBListView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:visibility="gone"
        ></com.hlzx.wenutil.ui.HBListView>

    <com.hlzx.wenutil.ui.GuaGuaKaView
        android:id="@+id/id_guaguaka"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:visibility="gone"
        hyman:text="ï¿¥500,0000"
        hyman:textColor="#ff00f0"
        hyman:textSize="30sp" />

    <com.hlzx.wenutil.ui.PullZoomListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        hyman:headview="@layout/headview"
        hyman:zoomview="@layout/zoomview" />

    <ImageView
        android:id="@+id/my_image"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:visibility="gone"
        />


    <com.hlzx.wenutil.ui.ElasticText
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:text="Spark"
        android:textSize="40sp"
        android:visibility="gone"
        />

    <com.hlzx.wenutil.ui.ShaderView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="wo are text"
        android:textSize="30sp"
        android:textColor="#000000"
        android:visibility="gone"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="click me"
        android:onClick="click"
        />

</LinearLayout>

